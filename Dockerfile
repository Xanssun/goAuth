# Этап сборки и выполнения
FROM golang:1.22.1

# Установите рабочий каталог
WORKDIR /app

# Копируйте go.mod и go.sum и скачайте зависимости
COPY go.mod go.sum ./
RUN go mod download

# Копируйте весь исходный код
COPY . .

# Соберите приложение
RUN go build -o main ./cmd/app

# Откройте порт, на котором будет работать ваше приложение
EXPOSE 3000

# Команда для запуска приложения
CMD ["./main"]
